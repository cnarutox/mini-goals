<!--pages/habit/habit.wxml-->
<!-- <text>pages/habit/habit.wxml</text> -->
<view class="page">
    <block wx:for="{{habitArray}}" wx:for-item="itemName">
        <view class="weui-cells weui-cells_after-title">
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{itemName.src}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">{{itemName.txt}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{"已坚持" + itemName.illustrate + "天"}}</view>
            </navigator>
        </view>
    </block>
    <button bindtap="addHabit">添加习惯</button>
    <button bindtap="bindTapView">空列表页</button>
    <button bindtap='gotoHabitClock'>gotoHabitClock(测试用,请不要删除)</button>
</view>
