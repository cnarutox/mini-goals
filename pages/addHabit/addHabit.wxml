<!--pages/add_habit/add_habit.wxml-->
<button class="btn1">
  <image class="btnImg" src="/pages/images/icon_nav_feedback.png"></image>
  <view>自定义习惯</view>
</button>
<button class="btn2">
  <image class="btnImg" src="/pages/images/icon_nav_feedback.png"></image>
  <view>搜索习惯</view>
</button>
<view class="box">
  <view>
    <view class="row" wx:for="{{buttonFirstLine}}" wx:for-item="item">
      <button class="{{btnNameIndex[item.title]==idx?'_cell':'cell'}}" size="mini" bindtap="goIndex" data-text="{{item.title}}">{{item.title}}</button>
    </view>
  </view>
  <view>
    <view class="row" wx:for="{{buttonSecondLine}}" wx:for-item="item">
      <button class="{{btnNameIndex[item.title]==idx?'_cell':'cell'}}" size="mini" bindtap="goIndex" data-text="{{item.title}}">{{item.title}}</button>
    </view>
  </view>
</view>
