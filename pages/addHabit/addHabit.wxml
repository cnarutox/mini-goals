<!--pages/add_habit/add_habit.wxml-->
<button class="btn1">
  <image class="btnImg" src="/pages/images/icon_nav_feedback.png"></image>
  <view>自定义习惯</view>
</button>
<button class="btn2">
  <image class="btnImg" src="/pages/images/icon_nav_feedback.png"></image>
  <view>搜索习惯</view>
</button>
<view class="box">
  <view>
    <view class="row" wx:for="{{buttonFirstLine}}" wx:for-item="item">
      <button class="{{btnNameIndex[item.title]==idx?'_cell':'cell'}}" size="mini" bindtap="goIndex" data-text="{{item.title}}">{{item.title}}</button>
    </view>
  </view>
  <view>
    <view class="row" wx:for="{{buttonSecondLine}}" wx:for-item="item">
      <button class="{{btnNameIndex[item.title]==idx?'_cell':'cell'}}" size="mini" bindtap="goIndex" data-text="{{item.title}}">{{item.title}}</button>
    </view>
  </view>
</view>
<view wx:if="{{idx<4}}">
  <block wx:for="{{buttonFirstLine[idx].habitArray}}" wx:for-item="itemName">
      <view class="weui-cells weui-cells_after-title" bindlongpress="handleLongPress">
          <navigator url="../habit_clock/habit_clock" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                  <image src="{{itemName.src}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
              </view>
              <view class="weui-cell__bd">{{itemName.txt}}</view>
              <view class="weui-cell__ft weui-cell__ft_in-access">{{"已坚持" + itemName.illustrate + "天"}}</view>
          </navigator>
      </view>
  </block>
</view>
<view wx:if="{{idx>=4}}">
  <block wx:for="{{buttonSecondLine[idx].habitArray}}" wx:for-item="itemName">
      <view class="weui-cells weui-cells_after-title" bindlongpress="handleLongPress">
          <navigator url="../habit_clock/habit_clock" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                  <image src="{{itemName.src}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
              </view>
              <view class="weui-cell__bd">{{itemName.txt}}</view>
              <view class="weui-cell__ft weui-cell__ft_in-access">{{"已坚持" + itemName.illustrate + "天"}}</view>
          </navigator>
      </view>
  </block>
</view>